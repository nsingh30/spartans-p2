<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".RecipePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_card_cardview_height"
                android:layout_margin="@dimen/large_card_margin"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/large_card_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/large_card_title_margins"
                            android:text="@string/card_subtitle_id"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/large_card_id_text"
                            android:fontFamily="@font/Montserrat_Bold"/>

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_id_margin"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/card_placeholder_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_card_id_text"
                            android:fontFamily="@font/Montserrat_Regular"/>

                        <ImageView
                            android:layout_width="@dimen/large_card_image_width"
                            android:layout_height="@dimen/large_card_image_height"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_favorite_border_24"
                            android:layout_marginRight="@dimen/large_card_title_margins"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:layout_width="@dimen/large_card_image_width"
                            android:layout_height="@dimen/large_card_image_height"
                            android:layout_gravity="end"
                            android:src="@mipmap/ic_recipe_round"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="@dimen/large_card_recipe_title"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/large_card_title_margins"
                        android:text="@string/card_title"
                        android:fontFamily="@font/Roboto_Bold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_card_title_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_title_margins"
                            android:layout_marginBottom="@dimen/large_card_title_margins"
                            android:text="@string/card_subtitle_yield"
                            android:textAlignment="textStart"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/large_card_subtitle_text"
                            android:fontFamily="@font/Montserrat_Bold"
                            />

                        <TextView
                            android:id="@+id/r_yield"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_title_margins"
                            android:layout_marginBottom="@dimen/large_card_title_margins"
                            android:text="@string/card_placeholder_text"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_card_subtitle_text"
                            android:fontFamily="@font/Montserrat_Regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_title_margins"
                            android:layout_marginBottom="@dimen/large_card_title_margins"
                            android:text="@string/card_subtitle_total"
                            android:textAlignment="textStart"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/large_card_subtitle_text"
                            android:fontFamily="@font/Montserrat_Bold"/>

                        <TextView
                            android:id="@+id/total_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_title_margins"
                            android:layout_marginBottom="@dimen/large_card_title_margins"
                            android:text="@string/card_placeholder_text"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_card_subtitle_text"
                            android:fontFamily="@font/Montserrat_Regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_title_margins"
                            android:layout_marginBottom="@dimen/large_card_title_margins"
                            android:text="@string/card_subtitle_prep"
                            android:textAlignment="textStart"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/large_card_subtitle_text"
                            android:fontFamily="@font/Montserrat_Bold"/>

                        <TextView
                            android:id="@+id/prep_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_card_title_margins"
                            android:layout_marginBottom="@dimen/large_card_title_margins"
                            android:text="@string/card_placeholder_text"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_card_subtitle_text"
                            android:fontFamily="@font/Montserrat_Regular"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/large_card_title_margins"
                        android:text="@string/card_subtitle_ingredients"
                        android:textAlignment="textStart"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/large_card_subtitle_text"
                        android:fontFamily="@font/Montserrat_Bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/large_card_title_margins"
                        android:text="@string/card_placeholder_text"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_card_subtitle_text"
                        android:fontFamily="@font/Montserrat_Regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/large_card_title_margins"
                        android:layout_marginTop="@dimen/large_card_title_margins"
                        android:text="@string/card_subtitle_directions"
                        android:textAlignment="textStart"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/large_card_subtitle_text"
                        android:fontFamily="@font/Montserrat_Bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/directions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/large_card_title_margins"
                        android:layout_marginBottom="@dimen/large_card_title_margins"
                        android:text="@string/lorem_ipsum_short"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_card_subtitle_text"
                        android:fontFamily="@font/Montserrat_Regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/large_card_margin"
                android:layout_marginRight="@dimen/large_card_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_card_flt_btn_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_cancel"
                    android:text="@string/card_btn_delete"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/Roboto_Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_card_flt_btn_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/category_btn"
                    android:text="@string/card_btn_edit"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/Roboto_Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_card_flt_btn_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/category_btn"
                    android:text="@string/card_btn_cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/Roboto_Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>