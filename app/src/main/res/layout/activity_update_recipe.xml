<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateRecipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_card_large"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_view"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:text="ID: "
                            android:textColor="@color/text_color_tertiary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/zero_padding"
                            android:textColor="@color/text_color_tertiary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/text_view_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="####"
                            android:textColor="@color/text_color_tertiary"
                            android:textSize="@dimen/text_small" />

                        <ImageView
                            android:layout_width="@dimen/drawable_star_size"
                            android:layout_height="@dimen/drawable_star_size"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_star" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_card_large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_title"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/app_background_color"
                            app:errorEnabled="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_text_small"
                            android:background="@color/card_view"
                            android:text="Yield:"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:layout_marginEnd="@dimen/margin_card_large">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_yield"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/app_background_color"
                                app:errorEnabled="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_text_small"
                            android:background="@color/card_view"
                            android:text="Prep time:"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:layout_marginEnd="@dimen/margin_card_large">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_prep_time"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/app_background_color"
                                app:errorEnabled="true" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_text_small"
                            android:background="@color/card_view"
                            android:text="Total time:"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:layout_marginEnd="@dimen/margin_card_large">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_total_time"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/app_background_color"
                                app:errorEnabled="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_text_small"
                            android:background="@color/card_view"
                            android:text="Ingredients:"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:layout_marginEnd="@dimen/margin_card_large">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_ingredients"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_card_large"
                                android:backgroundTint="@color/app_background_color"
                                android:inputType="textMultiLine"
                                app:errorEnabled="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_text_small"
                            android:background="@color/card_view"
                            android:text="Directions:"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:layout_marginEnd="@dimen/margin_card_large">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_directions"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_card_large"
                                android:backgroundTint="@color/app_background_color"
                                android:inputType="textMultiLine"
                                app:errorEnabled="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_cancel"
                    android:text="cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_primary"
                    android:text="update"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>