<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".UpdateRecipe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_title_3"
        android:textColor="@color/white"
        android:textSize="@dimen/large_card_add_title_text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/large_card_margin"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_card_cardview_height"
                android:layout_margin="@dimen/large_card_margin"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/large_card_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/large_card_margin"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_subtitle_id"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/large_card_id_text"
                                android:fontFamily="@font/Montserrat_Bold"/>

                            <TextView
                                android:id="@+id/id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/large_card_id_margin"
                                android:layout_weight="1"
                                android:text="@string/card_placeholder_text"
                                android:fontFamily="@font/Montserrat_Regular"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large_card_id_text" />

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/recipe_image_view"
                            android:layout_width="@dimen/large_card_add_image"
                            android:layout_height="@dimen/large_card_add_image"
                            android:layout_marginTop="@dimen/large_card_margin"
                            android:src="@mipmap/ic_recipe_round"
                            android:layout_gravity="center_horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/large_card_margin"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_title"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/large_card_subtitle_text"
                                android:fontFamily="@font/Montserrat_Bold"
                                />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_text_title"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/category_btn"
                                    android:fontFamily="@font/Montserrat_Regular"
                                    app:errorEnabled="true"
                                    android:textColor="@color/white"/>


                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/large_card_margin"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/card_subtitle_yield"
                                    android:textColor="@color/title_color"
                                    android:textSize="@dimen/large_card_subtitle_text"
                                    android:fontFamily="@font/Montserrat_Bold"
                                    />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="@dimen/large_card_input_field_width"
                                    android:layout_height="wrap_content"
                                    >

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_yield"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/category_btn"
                                        android:fontFamily="@font/Montserrat_Regular"
                                        app:errorEnabled="true"
                                        android:textColor="@color/white"/>

                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/large_card_margin"
                                android:layout_marginLeft="@dimen/large_card_input_margin"
                                android:layout_marginRight="@dimen/large_card_input_margin"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/card_subtitle_prep"
                                    android:textColor="@color/title_color"
                                    android:textSize="@dimen/large_card_subtitle_text"
                                    android:fontFamily="@font/Montserrat_Bold"
                                    />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="@dimen/large_card_input_field_width"
                                    android:layout_height="wrap_content"
                                    >

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_prep_time"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/category_btn"
                                        android:fontFamily="@font/Montserrat_Regular"
                                        app:errorEnabled="true"
                                        android:textColor="@color/white"/>

                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/large_card_margin"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/card_subtitle_total"
                                    android:textColor="@color/title_color"
                                    android:textSize="@dimen/large_card_subtitle_text"
                                    android:fontFamily="@font/Montserrat_Bold"
                                    />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="@dimen/large_card_input_field_width"
                                    android:layout_height="wrap_content"
                                    >

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_text_total_time"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/category_btn"
                                        android:fontFamily="@font/Montserrat_Regular"
                                        app:errorEnabled="true"
                                        android:textColor="@color/white"/>

                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/large_card_margin"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_subtitle_ingredients"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/large_card_subtitle_text"
                                android:fontFamily="@font/Montserrat_Bold"
                                />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_text_ingredients"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/category_btn"
                                    android:inputType="textMultiLine"
                                    android:fontFamily="@font/Montserrat_Regular"
                                    app:errorEnabled="true"
                                    android:textColor="@color/white"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/large_card_margin"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_subtitle_directions"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/large_card_subtitle_text"
                                android:fontFamily="@font/Montserrat_Bold"
                                />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_text_directions"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/category_btn"
                                    android:inputType="textMultiLine"
                                    android:fontFamily="@font/Montserrat_Regular"
                                    app:errorEnabled="true"
                                    android:textColor="@color/white"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_card_margin"
                android:layout_marginRight="@dimen/large_card_margin"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_card_flt_btn_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/category_btn"
                    android:text="@string/card_btn_update"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/Roboto_Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_card_flt_btn_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/category_btn"
                    android:text="@string/card_btn_clear"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/Roboto_Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_card_flt_btn_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/category_btn"
                    android:text="@string/card_btn_cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/Roboto_Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>